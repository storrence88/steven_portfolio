%h1 Create a new Portfolio Item
.portfolio_form
  = semantic_form_for portfolio_item do |f|
    - if portfolio_item.errors.any?
      #error_explanation
        %h2 
          = pluralize(portfolio_item.errors.count, 'error')
          prohibited this blog from being saved:
        %ul
          - portfolio_item.errors.full_messages.each do |message|
            %li
              = message
    .field
      = f.input :title
    .field
      = f.input :subtitle
    .field
      = f.input :body
    = f.action :submit